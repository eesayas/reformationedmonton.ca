<%- layout("layouts/boilerplate") -%>
<% include ./partials/navbar-alt.ejs %>
<% include ./partials/main-display.ejs %>

<form class="m-5" action="/visit" method="POST">
    <h2>Contact Us Here</h2>
    <br>
    <p class="lead"><i class="mail alternate outline icon"></i> reformationedmonton@gmail.com</p>
    <p class="lead"><i class="phone icon"></i>(780) 278 6076</p>
    <br>

    <h2>Or write your inquiry below</h2>
    <br>
    <div class="form-group">
        <label for="title">Name</label>
        <input type="text" class="form-control" placeholder="Enter a name to identify yourself and/or others" id="title" name="title">
    </div>

    <div class="form-row">
        <div class="form-group col-md-6">
            <label for="desc">Email</label>
            <input type="text" class="form-control" placeholder="Email Address" id="desc" name="desc">
        </div>
    
        <div class="form-group col-md-6">
            <label for="url">Phone Number</label>
            <input type="text" class="form-control" placeholder="Phone Number (optional)" id="url" name="url">
        </div>
    </div>

    <div class="form-group">
        <label for="msg">Message</label>
        <textarea class="form-control" placeholder="Enter Event Message" id="msg" name="msg"></textarea>
    </div>

    <br>
    <div class="form-group">
        <button type="submit" class="btn btn-success">SUBMIT</button>
    </div>
</form>

<script>
    $('[data-toggle="datepicker"]').datepicker();
</script>