<%- layout('layouts/boilerplate') -%>
<% include ./partials/navbar%>

<div id="fullscreen-cont">

    <div id="image-layer" style="background-image: url('/images/congregation/congregation-2.JPG');"></div>
    <div id="backdrop"></div>

    <div id="main-text-cont">
        <div>
            "In Him the whole structure being joined together,
            grows into a holy temple in the Lord."
        </div>
        <div>Ephesians 2:21</div>

        <a class="ui button" id="join-us" href="/visit-us">join us</a>
    </div>

    <div id="next-event-cont">
        <div id="time-cont">

            <!--DAYS-->
            <div class="denom-cont">
                <div>
                    <div class="digit" id="digit-days">00</div>
                    <div class="denom">days</div>
                </div>
            </div>

            <!--HOURS-->
            <div class="denom-cont">
                <div>
                    <div class="digit" id="digit-hours">00</div>
                    <div class="denom">hours</div>
                </div>
            </div>

            <!--MINUTES-->
            <div class="denom-cont">
                <div>
                    <div class="digit" id="digit-mins">00</div>
                    <div class="denom">minutes</div>
                </div>
            </div>

            <!--SECONDS-->
            <div class="denom-cont">

                <div>
                    <div class="digit" id="digit-secs">00</div>
                    <div class="denom">seconds</div>
                </div>
            </div>

        </div>

        <div id="text"><a href="/">until next event</a></div>

    </div>
</div>

<!---SERMON PANEL-->
<div class="panel">
    <div class="panel-text panel-left">
        <div>
            <div class="panel-title">Sermons</div>
            <div class="panel-body">
                We conduct our morning worship service at the <span>Royal Gardens Community League</span>
                every Sunday. The sermons are video recorded and are available on this website and <span>Youtube</span>.
            </div>
            <a class="panel-link">View Sermons <span>></span></a>
        </div>
    </div>

    <div class="panel-image panel-right"></div>
</div>

<div class="panel" style="overflow: hidden;">
    <div class="panel-image panel-left" id="panel-img-second">

    </div>

    <div class="panel-text panel-right">
        <div>
            <div class="panel-title">About Us</div>
            <div class="panel-body">
                We are a Reformed Baptist Christian Church in Edmonton, Alberta.
                You can click below to find out what we believe in, and get to know 
                our ministry.
            </div>
            <a class="panel-link">Our Worship <span>></span></a>
        </div>
    </div>
</div>

<!-- EVENTS -->
<div style="width: 100%; padding-bottom: 0rem; background: #f5f5f5;">
    <div id="event-thumb-title">upcoming events</div>
    <div class="slider" style="width: 100%;">
        <div class="event-thumb-cont">
            <div class="event-thumb-inner-cont" style="background: white;">
                <div class="event-thumb-img" style="background-image: url('/images/event/bible-study-event.JPG')"></div>
                <div class="event-thumb-details">
                    <div class="event-thumb-title">Morning Sunday Worship</div>
                    <div class="event-thumb-setting">
                        <div class="event-thumb-time">
                            <i class="calendar alternate outline icon"></i> Sunday, February 9 2020 at 10:30 AM
                        </div>
                        <div class="event-thumb-location">
                            <i class="map marker alternate icon"></i> Royal Gardens Community League
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>