<%- layout("layouts/boilerplate") -%>
<% include ../partials/navbar-alt.ejs %>
<% include ../partials/main-display.ejs %>

<form class="m-5" action="/visit" method="POST">
    <h2>Let us know about you!</h2>
    <br>
    <div class="form-group">
        <label for="title">Name</label>
        <input type="text" class="form-control" placeholder="Enter a name to identify yourself and/or others" id="title" name="title">
    </div>

    <div class="form-row">
        <div class="form-group col-md-6">
            <label for="desc">Email</label>
            <input type="text" class="form-control" placeholder="Email Address" id="desc" name="desc">
        </div>
    
        <div class="form-group col-md-6">
            <label for="url">Phone Number</label>
            <input type="text" class="form-control" placeholder="Phone Number (optional)" id="url" name="url">
        </div>
    </div>

    <div class="form-row">
        <div class="form-group col-md-6">
            <label for="inputState">Choose an event</label>
            <select id="inputState" class="form-control">
                <option selected>Choose...</option>
              <option>Sunday Service</option>
              <option>Wednesday Prayer Meeting</option>
            </select>
        </div>

        <div class="form-group col-md-6">
            <label for="uploadDate">Pick a Date</label><br>
            <input class="form-control" data-toggle="datepicker" name="uploadDate" placeholder="Pick a Date">
        </div>
    </div>

    <br>
    <div class="form-group">
        <button type="submit" class="btn btn-success">SUBMIT</button>
        <a type="button" href="/" class="btn btn-secondary">CANCEL</a>
    </div>
</form>

<script>
    $('[data-toggle="datepicker"]').datepicker();
</script>