<%- layout("layouts/boilerplate") -%>
<% include ../partials/navbar-alt.ejs %>

<iframe width="100%" height="70%" id="video-data"
    src="<%=sermon.url%>"
    frameborder="0" allow="accelerometer; autoplay; 
    encrypted-media; gyroscope; picture-in-picture" 
    allowfullscreen>
</iframe>

<div class="mx-5 my-5">
    <h2><%=sermon.title%></h2>
    <div>
        <%=sermon.desc%>
    </div>
    <br>
    <p><small class="text-muted">Uploaded on <span id="uploadDate"><%=sermon.uploadDate%></span></small></p>
    <br>
    <a type="button" class="btn btn-outline-dark" href="/sermons">View more sermons</a>
</div>

<script>
    $("#uploadDate").text( moment($("#uploadDate").text()).format("LL") );
</script>