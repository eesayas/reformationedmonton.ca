<%- layout("layouts/boilerplate") -%>
<% include ../partials/navbar-alt.ejs %>

<form class="mr-5 ml-5 mt-5" action="/sermons/<%=sermon._id%>?_method=PUT" method="POST">
    <h2>Edit a sermon</h2>
    <br>
    <div class="form-group">
        <label for="title">Sermon Title</label>
        <input type="text" class="form-control" placeholder="Enter Sermon Title" id="title" name="title" value="<%=sermon.title%>">
    </div>

    <div class="form-group">
        <label for="desc">Sermon Description</label>
        <input type="text" class="form-control" placeholder="Enter Sermon Description" id="desc" name="desc" value="<%=sermon.desc%>">
    </div>

    <div class="form-group">
        <label for="url">Sermon Youtube Url</label>
        <input type="text" class="form-control" placeholder="Enter Sermon Youtube Url" id="url" name="url" value="https://www.youtube.com/watch?v=<%=sermon.url%>">
    </div>

    <div class="form-group">
        <label for="uploadDate">Youtube Upload Date</label>
        <input data-toggle="datepicker" name="uploadDate" placeholder="Pick a Date" id="uploadDate" value="<%=sermon.uploadDate%>">
    </div>

    <br>
    <div class="form-group">
        <button type="submit" class="btn btn-success">SUBMIT</button>
        <a type="button" href="/sermons" class="btn btn-secondary">CANCEL</a>
    </div>
</form>

<form action="/sermons/<%=sermon._id%>?_method=DELETE" method="POST" class="mx-5">
    <button type="submit" class="btn btn-danger">DELETE THIS SERMON</button>
</form>

<script>
    $('[data-toggle="datepicker"]').datepicker();
</script>