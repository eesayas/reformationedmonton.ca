<%- layout("layouts/boilerplate") -%>
<% include ../partials/navbar-alt.ejs %>

<h3 class="text-center font-weight-light mt-5">Events</h3>
<div class="d-flex justify-content-center flex-wrap flex-md-nowrap">
  <% events.forEach( event => {%>
  <a class="card mx-2 shadow-lg bg-white rounded my-4" style="width: 30rem; text-decoration: none;" role="button" href="/events/<%=event._id%>">
      <img class="card-img-top" src="/images/event/bible-study-event.JPG" alt="Card image cap">
      <div class="card-body text-dark">
        <h5 class="card-title"><%=event.title%></h5>
        <small> <i class="calendar alternate outline icon"></i> <%=event.dayOfWeek%>s at <%=event.time%></small>&nbsp;&nbsp;
        <small> <i class="map marker alternate icon"></i> <%=event.location.join(", ")%></small>
      </div>
  </a>
  <% }); %>
</div>