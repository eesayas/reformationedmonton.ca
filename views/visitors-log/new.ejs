<%- layout('layouts/boilerplate') -%>
<% include ../partials/navbar-black %>

<!-- ref: https://www.w3schools.com/howto/howto_css_custom_checkbox.asp -->
<div id="new-log-cont">

    <div id="title">Visitor's Log</div>
    <div id="checkbox-cont">
        <label class="container">Have Visited
            <input id="have-visited-radio" type="radio" checked="checked" name="radio">
            <span class="checkmark"></span>
        </label>
        <label class="container">Will Visit
            <input id="will-visit-radio" type="radio" name="radio">
            <span class="checkmark"></span>
        </label>
    </div>

    <div id="calendar-cont" hidden><% include ../partials/calendar %></div>

    <div id="visitor-form">
            
        <input id="visitor-event" type="text" placeholder="Event">
        <input type="text" placeholder="Name">
        <input type="text" placeholder="Phone Number">
        <input type="text" placeholder="Email">

        <textarea placeholder="Comments"></textarea>

        <a id="visitor-submit-btn" class="ui button">submit</a>
    </div>

</div>